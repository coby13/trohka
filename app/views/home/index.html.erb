<% @articles.each do |article| %>
  <div class="title">
    <%= article.title %>
</div>
<p class="text-left">
	<%= image_tag article.photo.url(:medium), :class => "articleimg" %>		
    <%= article.body %>
    <%= article.category_id %>
<div style="clear:both"></div>
